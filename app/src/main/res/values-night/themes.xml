<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dodam" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/main_purple</item>
        <item name="colorPrimaryVariant">@color/main_purple</item>
        <item name="colorOnPrimary">@color/black    </item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Calender View theme -->
    <style name="MySpinnerDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <!-- 상단 색 변경 -->
        <item name="colorAccent">@color/white</item>
        <!-- dialog의 배경 변경 -->
        <item name="background">@drawable/dialog_design</item>
        <!-- 선택한 날짜를 표시할 색상 -->
        <item name="colorControlActivated">@color/main_purple</item>
        <item name="colorControlHighlight">@color/white</item>
        <!-- 취소/확인버튼 색상 -->
        <item name="android:textColor">@color/main_purple</item>
    </style>

</resources>