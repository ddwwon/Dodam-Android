<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:startColor="#F5CAF6"
                android:centerColor="#CEB7FF"
                android:endColor="#A8DAFF"
                android:angle="0"/>
            <corners
                android:radius="10dp"/>
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <solid android:color="#ffffff" />
            <corners
                android:radius="10dp"/>
        </shape>
    </item>
</layer-list>