<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".src.main.myPage.WriteInquiryFragment">

    <!-- Toolbar + BackButton -->
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/sign_in_btn_back"
            android:background="@drawable/btn_back"
            android:textColor="@color/black"/>

        <TextView
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/write_inquiry"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"/>

    </Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/gradation_under_line"/>

    <Spinner
        android:id="@+id/spinner_category"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:background="@drawable/gradation_rectangle_outline"
        android:layout_marginVertical="10dp"/>

    <EditText
        android:id="@+id/input_inquiry_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradation_rectangle_outline"
        android:hint="@string/inquiry_title_hint"
        android:textSize="15sp"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/input_inquiry_content"
        android:layout_width="match_parent"
        android:layout_height="580dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/gradation_rectangle_outline"
        android:hint="@string/inquiry_content_hint"
        android:gravity="left"
        android:textSize="15sp"
        android:padding="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_inquiry_write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/write_inquiry"
        android:background="@drawable/btn_gradation_color"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_gravity="right"/>
</LinearLayout>