<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_inquiry_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:background="@drawable/btn_gradation_color_pink"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:drawableRight="@drawable/ic_bottom_arrow"/>

    <FrameLayout
        android:id="@+id/frame_inquiry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_inquiry_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:background="@drawable/gradation_rectangle_outline"/>

        <LinearLayout
            android:id="@+id/group_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="right">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_inquiry_modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/step_modify"
                android:textSize="13sp"
                android:background="@color/white"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:textSize="12sp"
                android:layout_marginRight="5dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_inquiry_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/step_delete"
                android:textSize="13sp"
                android:background="@color/white"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/text_inquiry_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:padding="10dp"
        android:background="@drawable/gradation_rectangle_outline"
        android:layout_marginBottom="10dp"/>

</LinearLayout>